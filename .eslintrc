{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "root": true,
    "ignorePatterns": [
        "node_modules",
        "**/node_modules",
        "**/**/node_modules",
        "dist",
        "**/dist",
        "**/**/dist"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "max-lines": [
                "warn",
                {
                    "max": 8
                }
            ],
            "max-params": [
                "error",
                {
                    "max": 3
                }
            ]
    }
}
